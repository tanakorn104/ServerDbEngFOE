{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index.js"
    }
  ],
  "functions": {
    "api/**.js": {
      "maxDuration": 10,
      "cors": {
        "allowMethods": ["GET", "POST", "PUT", "DELETE"],
        "allowHeaders": ["Content-Type", "Authorization", "Cookie"],
        "allowOrigin": "https://dbengfoe.vercel.app",
        "allowCredentials": true
      }
    }
  }
}
